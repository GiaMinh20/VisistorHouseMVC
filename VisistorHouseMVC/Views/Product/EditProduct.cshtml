@using System;
@using VisistorHouseMVC.DTOs.ProductDto
@using VisistorHouseMVC.Data.Static;
@model EditProductDto
@{
    ViewData["Title"] = "Chỉnh sửa tin";
}
<form enctype="multipart/form-data" asp-action="EditProduct" class="my-5">

    <div class="container rounded bg-white my-5">
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-6">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Hình ảnh minh họa</h4>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                                @*<div class="carousel-indicators">
                                @for (int i = 0; i < @Model.ProductImages.Count(); i++)
                                {
                                @if (i == 0)
                                {
                                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                                aria-label="Slide 1"></button>
                                }
                                else
                                {
                                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
                                }
                                }
                                </div>*@
                                <div class="carousel-inner ">
                                    @foreach (var item in @Model.ProductImages)
                                    {
                                        if (item == @Model.ProductImages[0])
                                        {
                                            <div class="carousel-item active">
                                                <img class="img-fluid rounded mx-auto d-block my-auto " src="@item" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="img-fluid rounded mx-auto d-block" src="@item" />
                                            </div>
                                        }
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Chỉnh sửa bài viết</h4>
                        <p class="text-danger"><i>@TempData["ErrorEdit"]</i></p>
                        <p class="text-danger"><i>@TempData["ErrorDeleteProduct"]</i></p>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Tiêu đề</label>
                            <input asp-for="Name" value="@Model.Name" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Giá</label>
                            <input type="number" class="form-control" asp-for="Price" value="@Model.Price">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Mô tả</label>
                            <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Hình ảnh</label>
                            <input asp-for="Files" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Trạng thái</label>
                            <select style=" font-size: 100%; " asp-for="ProductStatus" class="form-control" asp-items="Html.GetEnumSelectList<ProductStatus>()"></select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Thành phố/Tỉnh</label>
                            <input asp-for="ProductAddress.City" type="text" class="form-control" placeholder="Thành phố/Tỉnh" value="@Model.ProductAddress.City">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Quận/Thị xã/Huyện</label>
                            <input asp-for="ProductAddress.District" type="text" class="form-control" placeholder="Quận/Thị xã/Huyện" value="@Model.ProductAddress.District">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Phường/Xã</label>
                            <input asp-for="ProductAddress.SubDistrict" type="text" class="form-control" placeholder="Phường/Xã" value="@Model.ProductAddress.SubDistrict" />
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Đường/Thôn</label>
                            <input type="text" class="form-control" asp-for="ProductAddress.Street" placeholder="Đường/Thôn" value="@Model.ProductAddress.Street" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Chi tiết nơi ở</label>
                            <input asp-for="ProductAddress.Details" type="text" class="form-control" placeholder="Chi tiết nơi ở" value="@Model.ProductAddress.Details" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button class="btn btn-primary profile-button" type="submit">Lưu chỉnh sửa</button>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger profile-button" >Xóa tin</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</form>

