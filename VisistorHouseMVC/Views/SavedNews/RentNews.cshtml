@using VisistorHouseMVC.DTOs.RentDto
@model RentInforDto
@{
    ViewData["Title"] = "Thông tin thuê";
}
<form asp-action="RentNews" class="my-5">

    <div class="container rounded bg-dark my-5 text-white">
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-6">
                <div class="p-3 py-5">
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner ">
                                    @foreach (var item in @Model.Product.PictureUrl)
                                    {
                                        if (item == @Model.Product.PictureUrl[0])
                                        {
                                            <div class="carousel-item active">
                                                <img class="img-fluid rounded mx-auto d-block my-auto " src="@item" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="img-fluid rounded mx-auto d-block" src="@item" />
                                            </div>
                                        }
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin tin tức</h4>
                    </div>
                    <div class="row">
                        <input asp-for="Product.Id" type="hidden" readonly />
                        <div class="col-md-3">
                            <h6>Tiêu đề:</h6>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="Product.Name" type="text" readonly value="@Model.Product.Name" class="form-control"/>
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-md-3">
                            <h6>Giá:</h6>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="Product.Price" type="text" readonly value="@Model.Product.Price VNĐ" class="form-control"/>
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-md-3">
                            <h6>Địa chỉ:</h6>
                        </div>
                        <div class="col-md-9">
                            <input type="text" readonly value="@Model.Product.ProductAddress.SumAddress()" class="form-control" />
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-md-3">
                            <h6>Liên hệ:</h6>
                        </div>
                        <div class="col-md-9">
                            <input  type="text" readonly value="@Model.Product.User.FullName" class="form-control " />
                            <input type="text" readonly value="@Model.Product.User.Email" class="form-control mt-1" />
                            <input  type="text" readonly value="@Model.Product.User.PhoneNumber" class="form-control mt-1" />
                        </div>
                    </div>
                </div>
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin người thuê</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label class="labels">Họ và tên</label>
                            <input asp-for="User.FullName" type="text" class="form-control" value="@Model.User.FullName" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            <input type="email" class="form-control" asp-for="User.Email" value="@Model.User.Email" />
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Số điện thoại</label>
                            <input asp-for="User.PhoneNumber" value="@Model.User.PhoneNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button class="btn btn-primary profile-button" type="submit">Xác nhận</button>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-controller="SavedNews" asp-action="Index" asp-route-name="@User.Identity.Name" class="btn btn-danger profile-button">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</form>

