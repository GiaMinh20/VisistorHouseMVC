@using VisistorHouseMVC.DTOs.AccountDto;
@model ProfileDto;
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container py-4">

    <div class="row align-items-md-stretch">
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <div class="p-4 text-white bg-dark rounded-3 ">
                <div class="d-flex flex-column align-items-center">
                    <p>
                        <img style="width: 5em; height: 5em;" class="rounded-circle" src="@Model.User.AvatarUrl">
                    </p>
                    <span>@Model.User.UserName</span>
                    <span><a asp-action="EditProfile" asp-controller="Account"><i class="fas fa-edit"></i></a></span>
                </div>
                <div class="py-1 d-flex align-items-center justify-content-between border-bottom">
                    <span>Facebook</span>
                    <a style="text-decoration: none; color:white" href="">@Model.User.UserName</a>
                </div>
                <div class="py-2 d-flex align-items-center justify-content-between border-bottom">
                    <span>Zalo</span>
                    <a style="text-decoration: none; color:white" href="">@Model.User.UserName</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-12 bg-white px-3 mb-3 pb-3">
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Họ và tên</p>
                        <p class="py-2 text-muted">@Model.User.FullName</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Email</p>
                        <p class="py-2 text-muted">@Model.User.Email</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Số điện thoại</p>
                        <p class="py-2 text-muted">@Model.User.PhoneNumber</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Địa chỉ</p>
                        <p class="py-2 text-muted">@Model.Address()</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="py-2">Số lượng bài viết</p>
                        <p class="py-2 text-muted">@Model.Products.Count()</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row align-items-md-stretch">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="p-5 mb-4 bg-light rounded-3">
                <div class="container-fluid py-5">
                    @if (@Model.Products.Count() <= 0)
                    {
                        <h1 class="display-5 fw-bold">Chưa có bài viết nào</h1>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            @foreach (var item in @Model.Products)
                            {
                                <div class="col">
                                    <a style="text-decoration:none; color:black" class="card" asp-action="EditProduct" asp-controller="Product" asp-route-id="@item.Id">
                                        <img style="width: 14.2em; height: 10em;" src="@item.PictureUrl[0]" class="card-img-top" alt="@item.Name">
                                        <div class="card-body">
                                            <span class="card-text">@item.Name</span>
                                            <span class="text-danger"><i>@item.ProductStatus.ToString()</i></span>
                                            <p class="card-text">@item.ProductAddress.District @item.ProductAddress.City </p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>
